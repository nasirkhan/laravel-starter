# ====================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ====================================================================
# This file contains settings optimized for local development.
# Copy to .env and customize for your local environment.
# ====================================================================

APP_NAME="Laravel Starter - Dev"
APP_ENV=local
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_TIMEZONE="UTC"
APP_URL=http://laravel-starter.test

# Initial Configuration
INITIAL_USERNAME=100000
USER_REGISTRATION=true

# Seeding Configuration - Enable dummy data for development
SEED_DUMMY_DATA=true

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Logging - Use 'daily' for detailed logs during development
LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ====================================================================
# DATABASE CONFIGURATION
# ====================================================================
# SQLite is recommended for quick local development
DB_CONNECTION=sqlite
# Alternatively, use MySQL for production-like environment:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel_starter_dev
# DB_USERNAME=root
# DB_PASSWORD=secret

# ====================================================================
# SESSION & CACHE
# ====================================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcast - Use 'log' for development
BROADCAST_CONNECTION=log

# Filesystem - Local disk for development
FILESYSTEM_DISK=local

# Queue - Use 'sync' for immediate execution during development
# Change to 'database' or 'redis' to test async behavior
QUEUE_CONNECTION=sync

# Cache - File cache is sufficient for development
CACHE_STORE=file
CACHE_PREFIX=

# ====================================================================
# REDIS CONFIGURATION (Optional for development)
# ====================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ====================================================================
# MAIL CONFIGURATION
# ====================================================================
# Use 'log' to view emails in storage/logs/laravel.log
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="dev@laravel-starter.test"
MAIL_FROM_NAME="${APP_NAME}"

# For testing emails with MailHog/MailPit:
# MAIL_MAILER=smtp
# MAIL_HOST=127.0.0.1
# MAIL_PORT=1025
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null

# ====================================================================
# AWS / CLOUD STORAGE (Usually not needed in development)
# ====================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ====================================================================
# VITE CONFIGURATION
# ====================================================================
VITE_APP_NAME="${APP_NAME}"

# ====================================================================
# SOCIAL LOGIN - Development Credentials
# ====================================================================
# Create test OAuth apps for each provider
# Use localhost or .test domain for callbacks

# Facebook OAuth
FACEBOOK_ACTIVE=false
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT=http://laravel-starter.test/login/facebook/callback

# GitHub OAuth
GITHUB_ACTIVE=false
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT=http://laravel-starter.test/login/github/callback

# Google OAuth
GOOGLE_ACTIVE=false
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT=http://laravel-starter.test/login/google/callback

# ====================================================================
# DEBUGGING TOOLS (Development Only)
# ====================================================================
# Laravel Debugbar - uncomment to enable
# DEBUGBAR_ENABLED=true

# Laravel Telescope - uncomment to enable
# TELESCOPE_ENABLED=true

# ====================================================================
# PERFORMANCE SETTINGS (Development)
# ====================================================================
# Disable certain optimizations for easier debugging
VIEW_COMPILED_PATH=
CACHE_DRIVER=file
